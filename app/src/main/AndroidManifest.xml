<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hope">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hope">
        <activity
            android:name=".activity.startActivity.WelcomePageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.startActivity.EmailReceivedActivity"
            android:exported="true" />
        <activity
            android:name=".activity.startActivity.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".activity.mainActivity.HomePageActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".activity.startActivity.SignUpActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.Hope.NoActionBar" />
        <activity
            android:name=".activity.startActivity.SignInActivity"
            android:exported="true">

        </activity>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="barcode" />
    </application>

</manifest>