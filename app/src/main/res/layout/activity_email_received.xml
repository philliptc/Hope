<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jemaat.activity.startActivity.EmailReceivedActivity"
    android:background="@drawable/background_apps">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack_EmailReceived"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        />

    <ImageView
        android:id="@+id/ivLogo_EmailReceived"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@drawable/gpdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"/>

    <TextView
        android:id="@+id/tvChurch_EmailReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/church_name"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo_EmailReceived"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvInputEmail_EmailReceived"
        android:layout_width="286dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/information_emailreceived"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChurch_EmailReceived"
        android:layout_marginTop="85dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgEmail_EmailReceived"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/ic_emailreceived"
        android:layout_marginBottom="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKirim_ForgotPassword"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="@string/btnSelesai"
        android:textAllCaps="false"
        android:background="@drawable/style_button"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>