<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.fragment.JadwalIbadahFragment"
    android:background="@drawable/background_apps">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvTitle_JadwalIbadahAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jadwalibadah"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvJadwalIbadahAdmin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_jadwalibadah"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btnEdit_JadwalIbadahAdmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle_JadwalIbadahAdmin" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit_JadwalIbadahAdmin"
            android:layout_width="101dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/btnEdit"
            android:textAllCaps="false"
            android:background="@drawable/style_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>