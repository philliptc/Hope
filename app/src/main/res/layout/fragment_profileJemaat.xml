<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment"
    android:background="@drawable/background_apps">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_Profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">

        <EditText
            android:id="@+id/etName_Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="null"
            android:gravity="center"
            android:text="@string/peoplename"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_WhiteLineName"
            android:layout_width="415dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etName_Profile" />

        <LinearLayout
            android:id="@+id/llDataDiri_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_WhiteLineName">

            <LinearLayout
                android:id="@+id/llNomerTelefon_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNomer_Profile"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_telefon"
                    android:drawablePadding="15dp"
                    android:text="@string/nomorhp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/etNomerHP_Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="null"
                    android:text="@string/nomorhppengguna"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTanggalLahir_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTanggalLahir_Profile"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_birthday"
                    android:drawablePadding="15dp"
                    android:text="@string/tgllahir"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/etTanggalLahir_Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="null"
                    android:text="@string/tanggal"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>