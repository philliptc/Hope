<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.activity.DetailRegistrasiIbadahActivity"
    android:background="@drawable/background_apps">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_DetailRegistrasiIbadahAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBack_DetailRegistrasiIbadahAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:background="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle_DetailRegistrasiIbadahAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/church_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack_DetailRegistrasiIbadahAdmin"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnLogout_DetailRegistrasiIbadahAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvNamaIbadah_DetailRegistrasiIbadahAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doaraya"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_DetailRegistrasiIbadahAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvJamTanggal_DetailRegistrasiIbadahAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/jadwaldoaraya"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNamaIbadah_DetailRegistrasiIbadahAdmin" />

    <View
        android:id="@+id/viewGarisPutih_DetailRegistrasiIbadahAdmin"
        android:layout_width="415dp"
        android:layout_height="2dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJamTanggal_DetailRegistrasiIbadahAdmin"/>

    <TextView
        android:id="@+id/tvJumlahJemaaatTerdaftar_DetailRegistrasiIbadahAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jumlahjemaatterdaftar"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/viewGarisPutih_DetailRegistrasiIbadahAdmin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvJumlahJemaat_DetailRegistrasiIbadahAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ini jumlah / jumlah"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJumlahJemaaatTerdaftar_DetailRegistrasiIbadahAdmin" />

    <View
        android:id="@+id/viewGarisPutih2_DetailRegistrasiIbadahAdmin"
        android:layout_width="415dp"
        android:layout_height="2dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJumlahJemaat_DetailRegistrasiIbadahAdmin"/>

    <TextView
        android:id="@+id/tvDaftarNamaJemaat_DetailRegistrasiIbadahAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/daftarnamajemaat"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewGarisPutih2_DetailRegistrasiIbadahAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>