<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jemaat.activity.mainActivity.CancelRegistrasiIbadahActivity"
    android:background="@drawable/background_apps">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_CancelRegistrasiIbadah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBack_CancelRegistrasiIbadah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:background="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle_CancelJadwalIbadah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/detailregistrasi"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack_CancelRegistrasiIbadah"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnLogout_CancelRegistrasiIbadah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvNamaIbadah_CancelRegistrasiIbadah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doaraya"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appbar_CancelRegistrasiIbadah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvJamTanggal_CancelRegistrasiIbadah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/jadwaldoaraya"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNamaIbadah_CancelRegistrasiIbadah" />

    <View
        android:id="@+id/viewGarisPutih_CancelRegistrasiIbadah"
        android:layout_width="415dp"
        android:layout_height="2dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJamTanggal_CancelRegistrasiIbadah"/>

    <TextView
        android:id="@+id/tvNama_CancelRegistrasiIbadah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/namaygterdaftar"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/viewGarisPutih_CancelRegistrasiIbadah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvNamaPengguna_CancelRegistrasiIbadah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/namapengguna"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNama_CancelRegistrasiIbadah" />

    <View
        android:id="@+id/viewGarisPutih2_CancelRegistrasiIbadah"
        android:layout_width="415dp"
        android:layout_height="2dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNamaPengguna_CancelRegistrasiIbadah"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="230dp"
        android:layout_height="34dp"
        android:text="@string/btnBatalkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:background="@drawable/style_button3"
        android:layout_marginBottom="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>